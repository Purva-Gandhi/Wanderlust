<% layout("/layouts/boilerplate")%>

<body>
    <style>
        .filters{
            display:flex;
            align-items: center;
            flex-direction:row;
            flex-wrap: wrap;
        }
        .filter{
            text-align: center;
            margin-right:2rem;
